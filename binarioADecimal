#include <iostream>

using namespace std;

const short TAM = 8;

void decimalABinario(int numero, int *bin) {
    size_t contador = TAM;
    for(int i = contador - 1; i >= 0; i--) {
        bin[i] = -1;
    }
    if(numero == 0) {
        bin[TAM-1] = 0;
        return;
    }
    while(numero >= 1) {
        bin[--contador] = numero % 2;
        numero /= 2;
    }
}

int main() {
    int num;
    int binario[TAM] = {-1};
    cout << "Ingrese el numero en decimal : ";
    cin >> num;
    decimalABinario(num, binario);
    cout << "El numero en binario es : ";
    for(int i = 0; i < TAM; i++){
        if(binario[i] != -1){
            cout << binario[i];
        }
    }

    cout << endl << endl << endl << endl << endl;
    return 0;
}
